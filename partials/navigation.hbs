<header>

<nav class="navbar navbar-expand-md navbar-light justify-content-start">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  {{#if @site.logo}}

        <div class="logo-fixed d-block d-sm-block d-md-block d-lg-block">
          <a href="{{@site.url}}"><img src="{{@site.logo}}" alt="blog logo" class="logo-nav left" /></a>
        </div>

  {{else}}
  <a href="{{@site.url}}" class="navbar-brand headerurl">{{@site.title}}</a>
  {{/if}}
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">

                <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="menu-item{{#if current}} active{{/if}}">
            <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
        </li>
        {{/foreach}}
        <!-- End the loop -->
    </ul>
  </div>
</nav>
</header>
