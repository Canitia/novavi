<!DOCTYPE html>
<html lang="{{@site.lang}}">
  <head>
    <title>{{meta_title}}</title>
    {{! Document Settings }}
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    {{! Responsive Meta Tags }}
    <link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous">
    <!-- own stylesheet for general stuff -->
    <link rel="stylesheet" href="{{asset "css/style.css"}}">
    <!-- other used items -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<!-- main navigation -->
{{navigation}}
<main class="{{body_class}}">

{{#is "tag"}}
    <div class="tag_head_wrap">
      {{#tag}}
          <div class="tag_heading text-center" style="background-image: url(  {{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-image.jpg"}}{{/if}});">
          <p class="posttitle">{{name}}</p>
          </div>
      {{/tag}}
    </div>
{{/is}}

{{#is "post, page"}}
    <div class="tag_head_wrap">
      {{#post}}
            <div class="tag_heading tag_heading_post text-center" style="background-image: url({{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-image.jpg"}}{{/if}});">
            
            </div>
      {{/post}}
    </div>
{{/is}}
<div class="container-fluid">

    {{{body}}}

</div><!-- container fluid END! -->
</main>

<footer class="page-footer">
    <div class="top-socials">
      <a href="{{@site.url}}/rss" target="_blank"><i class="fas fa-rss"></i></a>
      {{#if @site.facebook}}
        <a href="{{facebook_url @site.facebook}}" target="_blank"><i class="fab fa-facebook"></i></a>
      {{/if}}
      {{#if @site.twitter}}
        <a href="{{twitter_url @site.twitter}}" target="_blank"><i class="fab fa-twitter" ></i></a>
      {{/if}}  
    </div>
    {{> 'ui/footer'}}
</footer>
<!-- Loading fonts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/webfont/1.6.28/webfontloader.js"></script>
<script>
  WebFont.load({
    google: {
      families: ['Roboto:900', 'Montserrat Alternates:300', 'Antic Slab']
    }
  });
</script>

<!-- Ghost CSS related to the gallery -->
<script>
    var images = document.querySelectorAll('.kg-gallery-image img');
    images.forEach(function (image) {
        var container = image.closest('.kg-gallery-image');
        var width = image.attributes.width.value;
        var height = image.attributes.height.value;
        var ratio = width / height;
        container.style.flex = ratio + ' 1 0%';
    })
</script>

{{ghost_foot}}

</html>
