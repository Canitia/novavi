<!DOCTYPE html>
<html lang="{{lang}}">
  <head>
    <title>{{meta_title}}</title>
    {{! Document Settings }}
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />

    {{! Responsive Meta Tags }}
    <!-- own stylesheet for general stuff -->
    <link rel="stylesheet" href="{{asset "css/style.css"}}">
    <!-- other used items -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
        {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>

{{#if @blog.cover_image}}
    <div class="d-block d-sm-block d-md-block d-lg-block tag_head_wrap" >
     <div class="tag_heading_home text-center" style="background-image: url({{#if @blog.cover_image}}{{@blog.cover_image}}{{/if}}); background-repeat: no-repeat; background-size: cover;">

        {{#is "index, home"}}
            <div class="text-main d-none d-sm-none d-md-none d-lg-none">
          {{#if @blog.description}}
            {{@blog.description}}
          {{/if}}
            </div>
        {{/is}}
  </div>
  </div>

{{/if}}  
<!-- main navigation -->
{{navigation}}
<main class="{{body_class}}">


{{#if @labs.publicAPI}}
  {{#is "home"}}
    {{> 'post/card-featured'}}
  {{/is}}
{{/if}}

{{#is "author"}}
<div class="d-block d-sm-block d-md-block d-lg-block tag_head_wrap">
  {{#author}}
  <div class="tag_heading text-center" style="background-image: url({{#if cover_image}}{{img_url cover_image}}{{else}}{{asset "images/fallback-cover.jpg"}}{{/if}}); background-repeat: no-repeat; background-size: cover;">
    <img src="{{#if profile_image}}{{img_url profile_image}}{{else}}{{asset "images/no-pic-available-user.jpg"}}{{/if}}" class="avatar-page avatar-page-author center-align" title="Image of {{name}}" alt="Image of {{name}}" />
    <p class="posttitle posttitle-author">{{name}}</p>
      <div class="socialfooter-top text-center socialfooter-top-author">
      {{#if facebook}}<a href="{{facebook_url}}" target="blank"><i class="fab fa-facebook fa-facebook-author"></i></a>{{/if}}
      {{#if twitter}}<a href="{{twitter_url}}" target="blank"><i class="fab fa-twitter fa-twitter-author"></i></a>{{/if}}
      </div>
  </div>
  {{/author}}
  </div>
{{/is}}

{{#is "tag"}}
<div class="d-block d-sm-block d-md-block d-lg-block tag_head_wrap">
  {{#tag}}
  <div class="tag_heading text-center" style="background-image: url({{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-tag.jpg"}}{{/if}});">
  <p class="posttitle">{{name}}</p>
  </div>
  {{/tag}}
</div>
{{/is}}



{{#is "post, page"}}
<div class="d-block d-sm-block d-md-block d-lg-block tag_head_wrap">
  {{#post}}
    <div class="tag_heading tag_heading_post text-center" style="background-image: url({{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-image.jpg"}}{{/if}});">
    
    </div>

  {{/post}}
  </div>
{{/is}}
<div class="container-fluid">

       {{{body}}}

</div><!-- container fluid END! -->
</main>

<footer class="page-footer">
      <div class="top-socials">
          <a href="{{@blog.url}}/rss" target="_blank"><i class="fas fa-rss"></i></a>
          {{#if @blog.facebook}}
            <a href="{{facebook_url @blog.facebook}}" target="_blank"><i class="fab fa-facebook"></i></a>
          {{/if}}
          {{#if @blog.twitter}}
            <a href="{{twitter_url @blog.twitter}}" target="_blank"><i class="fab fa-twitter" ></i></a>
          {{/if}}  
    </div>
    {{> 'ui/footer'}}
</footer>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{{ghost_foot}}
</html>
